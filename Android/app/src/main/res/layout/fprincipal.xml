<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fprincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.codigotigre.tecnoupsa.clsPrincipal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mensaje"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp">

            <Button
                android:text="LucesFront"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:id="@+id/buttonLucesFront" />
            <Button
                android:text="Puerta Principal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonPuertaP" />
            <Button
                android:text="Puerta Trasera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonPuertaT" />

            <Button
                android:text="LucesS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLucesS" />

            <Button
                android:text="VentS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonVentS" />

            <Button
                android:text="WinS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonWinS" />

            <Button
                android:text="LucesR1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLucesR1" />

            <Button
                android:text="VentR1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonVentR1" />

            <Button
                android:text="WinR1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonWinR1" />

            <Button
                android:text="LucesR2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLucesR2" />

            <Button
                android:text="VentR2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonVentR2" />

            <Button
                android:text="WinR2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonWinR2" />

            <Button
                android:text="LucesCS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLucesCS" />

            <Button
                android:text="VentC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonVentC" />

            <Button
                android:text="LucesServ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLucesServ" />

            <Button
                android:text="LucesB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLucesB" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
